<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChatsActivity" android:background="#E1D1FF" android:translationZ="-10dp">
    <EditText
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="sdkjdhjdgsgdfkghihidfhgidfighisdfghid"
            style="@style/Widget.AppCompat.EditText" android:background="@drawable/edit_text_border"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:paddingStart="15dp"
            android:paddingEnd="160dp"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/button2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="13dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_background" android:backgroundTint="#9753FF"
            android:foregroundTint="#FFFFFF"
            android:layout_marginBottom="13dp"
            android:text="Send" tools:text="Send" android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:id="@+id/button4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/button_background" android:backgroundTint="#9753FF"
            android:foregroundTint="#FFFFFF"
            android:layout_marginBottom="13dp"
            android:text="Logout" tools:text="Logout" android:textColor="#FFFFFF"
            android:textAllCaps="false"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText4"
            android:id="@+id/recyclerView" android:translationZ="-5dp"
            android:fadeScrollbars="false" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>